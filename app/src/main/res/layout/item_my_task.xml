<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/tvTitle"
            android:background="#be754592"
            android:layout_alignParentTop="true"
            android:layout_gravity="right" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/tvItemText"
            android:background="#5b304f"
            android:layout_marginTop="71dp"
            android:layout_below="@+id/btnItemCall"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/tvItempone"
            android:layout_above="@+id/rtbItemPriority"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="46dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnItemCall"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/rtbItemPriority" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rtbItemPriority"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:numStars="5" />

    </RelativeLayout>
</LinearLayout>